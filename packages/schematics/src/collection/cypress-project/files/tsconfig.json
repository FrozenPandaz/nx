{
  "compilerOptions": {
    "sourceMap": false,
    "declaration": false,
    "outDir": "<%= offsetFromRoot %>dist/apps/<%= projectName %>/src",
    "baseUrl": "../../node_modules",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": ["cypress", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "cypress/support/*.ts",
    "../../node_modules/cypress"
  ]
}
